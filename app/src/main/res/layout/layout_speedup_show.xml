<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >
    <!--手机信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_phoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SamSung"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_phoneModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galaxy Note3"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <!--进度条-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        >
        <ProgressBar
            android:id="@+id/pb_ram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/speedup_progressbar_clearall_"
            android:progress="50"/>
        <TextView
            android:id="@+id/tv_ramMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="可用内存：900MB/2.7G"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/oneoKeyClear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="一键清理"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/style_all_button"/>
    </LinearLayout>

</LinearLayout>
