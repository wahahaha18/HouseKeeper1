<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <CheckBox
        android:id="@+id/cb_speedup_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:button="@drawable/check_rect_correct"
        />
    <ImageView
        android:id="@+id/iv_speedup_appIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/cb_speedup_del"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_speedup_app_PackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="内存：2.46MB"
        android:layout_toRightOf="@id/iv_speedup_appIcon"
        android:layout_alignBottom="@id/iv_speedup_appIcon"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_appLabel"
        android:gravity="center_vertical"

        />
    <TextView
        android:id="@+id/tv_speedup_app_Sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统进程"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/tv_speedup_app_PackageName"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/tv_speedup_app_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/cb_speedup_del"
        android:singleLine="true"
        android:layout_alignStart="@+id/tv_speedup_app_PackageName" />

</RelativeLayout>
