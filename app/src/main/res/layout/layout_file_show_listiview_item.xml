<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:addStatesFromChildren="true"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/cb_file_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:button="@drawable/check_rect_correct"
        />
    <ImageView
        android:id="@+id/iv_file_item_appIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/cb_file_item_del"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_file_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="文件名字"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/cb_file_item_del"
        android:singleLine="true"
        android:layout_toRightOf="@id/iv_file_item_appIcon"
        />
    <TextView
        android:id="@+id/tv_file_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="修改日期"
        android:layout_toRightOf="@id/iv_file_item_appIcon"
        android:layout_alignBottom="@id/iv_file_item_appIcon"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_file_item_name"
        android:gravity="center_vertical"

        />
    <TextView
        android:id="@+id/tv_file_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件大小"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/tv_file_item_date"

        />


</RelativeLayout>
