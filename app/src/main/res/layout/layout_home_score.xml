<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    >

    <com.zxzq.housekeeper.view.ClearArcView
        android:id="@+id/cv_home_score"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_home_score"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:src="@drawable/home_score_normal_bg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_score_image"
        android:clickable="true"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:clickable="true"/>
    <TextView
        android:id="@+id/tv_home_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="30sp"
        android:layout_toRightOf="@id/tv_home_score"
        android:layout_alignBaseline="@id/tv_home_score"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机加速"
        android:layout_below="@id/tv_home_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:background="@drawable/home_score_text"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:clickable="true"/>

</RelativeLayout>
