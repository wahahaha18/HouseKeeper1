    <!--软件管理中的的item的style-->
    <style name="softmgr_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">"hitSoftItem"</item>
        <item name="android:drawableRight">@drawable/ic_arrows_right</item>
    </style>

    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    <!--文件管理相对布局Style-->
    <style name="layout_flie_listitem_rl">
       <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hitListItem</item>
        <item name="android:background">@drawable/home_entry_item</item>
    </style>


    <!--文件管理线性布局Style-->
    <style name="layout_flie_listitem_rl_ll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--文件管理标签Style-->

    <style name="layout_flie_listitem_rl_ll_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--文件管理，计算中的Style-->
    <style name="layout_flie_listitem_rl_ll_tv1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!--文件管理，进度条的Style-->
    <style name="layout_flie_listitem_rl_pb">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
       <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--文件管理，向右箭头的Style-->
    <style name="layout_flie_listitem_rl_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrows_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--通讯大全-->
    <style name="tel_showtext">
        <item name="android:background">#FF009ACD</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/tel_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tel_show_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
